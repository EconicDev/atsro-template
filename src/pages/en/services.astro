---
import i18next, { t, changeLanguage, setDefaultNamespace } from "i18next";
import { HeadHrefLangs } from "astro-i18next/components";
import { Image } from "@astrojs/image/components";
import MainHead from "../../components/MainHead.astro";
import PageBanner from "../../components/PageBanner.astro";
import DetailedCard from "../../components/DetailedCard.astro";
import DesicriptionTerm from "../../components/DesicriptionTerm.astro";
import ContactForm from "../../components/ContactForm.jsx";
import Footer from "../../components/Footer.astro";
import Nav from "../../components/Nav.jsx";
import { ArticleTitle, SectionTitle } from "../../components/Stateless";
import LanguageSelectorWrapper from "../../components/LanguageSelectorWrapper.astro";
import { getNavTranslations } from "../../utils/index";

changeLanguage("en");

setDefaultNamespace("services");
const navTranslations = getNavTranslations(t);
const customsProcedures = [
    {
        title: t("R\u00E9gimen de declaraci\u00F3n a consumo/ Definitivo"),
        descriptionList: [
            t("Nacionalizaci\u00F3n"),
            t("Servicio de declaraci\u00F3n de mercanc\u00EDa para importaci\u00F3n con el fin del pago de los derechos de importaci\u00F3n (impuestos y otros) y comercio local"),
            t("Exportaci\u00F3n"),
            t("Servicio de declaraci\u00F3n de mercanc\u00EDa y operaciones en puerto para exportaci\u00F3n"),
        ],
    },
    {
        title: t("Reg\u00EDmenes de suspensi\u00F3n de derechos de importaci\u00F3n"),
        descriptionList: [
            t("Internaci\u00F3n temporal o Admisi\u00F3n temporal sin transformaci\u00F3n"),
            t("Servicio de declaraci\u00F3n de mercanc\u00EDa que permite la entrada al pa\u00EDs con el fin de cumplir un prop\u00F3sito, por un tiempo limitado"),
            // t(""),
            // t("Servicio de declaraci\u00F3n de mercanc\u00EDa que permite la entrada al pa\u00EDs con el fin de cumplir un prop\u00F3sito, por un tiempo limitado"),
            t("Admisi\u00F3n temporal para perfeccionamiento activo"),
            t("Servicio de declaraci\u00F3n de mercanc\u00EDa que permite la entrada al pa\u00EDs con el fin de ser sometida a un proceso de perfeccionamiento"),
            t("Admisi\u00F3n temporal para perfeccionamiento activo:"),
            t("Servicio de declaraci\u00F3n de mercanc\u00EDa que permite la entrada al pa\u00EDs con el fin de ser sometida a un proceso de perfeccionamiento Las actividades que entran en el rengl\u00F3n de perfeccionamiento son: transformaci\u00F3n, montaje, ensamblaje, adaptaci\u00F3n, reparaci\u00F3n, restauraci\u00F3n, acondicionamiento"),
        ],
    },
    {
        title: t("Leyes especiales"),
        descriptionList: [
            t("Exoneraci\u00F3n (Ley 4027)"),
            t("Servicio de gesti\u00F3n y tr\u00E1mite de beneficio de descargo pago de derechos de importaci\u00F3n de mercanc\u00EDa mediante resoluci\u00F3n del ministerio de hacienda gaceta oficial, leyes que lo amparen"),
            t("Zona Franca (Ley 8-90)"),
            t("Servicio de declaraci\u00F3n de mercanc\u00EDa en el r\u00E9gimen legal que tiene como beneficio el descargo de pago de derechos de importaci\u00F3n, impuesto sobre la renta y otras obligaciones tributarias"),
            t("Mudanza (Ley 14-93)"),
            t("Servicio de declaraci\u00F3n de ajuares del hogar y efectos personales con la aplicaci\u00F3n de beneficios parciales a los ciudadanos dominicanos que vienen retirados del extranjero"),
            t("Exoneraciones parciales de veh\u00EDculos (Ley 168)"),
            t("Servicio de gesti\u00F3n y tr\u00E1mite de beneficio de pago parcial de derechos de importaci\u00F3n de veh\u00EDculos de ciudadanos que viven en el exterior"),
