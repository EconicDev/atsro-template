---
import i18next, { t, changeLanguage, setDefaultNamespace } from "i18next";
import ServiceListItem from "./ServiceListItem.astro";

const services = [
    {
        description: "services.one",
        icon: "/assets/shake-hands.svg",
    },
    {
        description: "services.two",
        icon: "/assets/quality.svg",
    },
    {
        description: "services.three",
        icon: "/assets/dominican_republic_filled.svg",
    },
];
///assets/trophy.svg
setDefaultNamespace("home");
changeLanguage(i18next.language);
---

<div class="relative overflow-hidden bg-white py-16 lg:py-24">
    <div class="absolute inset-x-0 -top-10 h-1/2 bg-gray-50"></div>

    <div
        class="relative text-center mx-auto max-w-xl px-4 sm:px-6 lg:max-w-7xl lg:px-8"
    >
        <h3
            class="inline-flex mt-8 items-center rounded text-dodger-blue-500 text-3xl font-medium"
        >
            {t("services.title")}
        </h3>
        <div
            class="relative mt-12 lg:mt-24 lg:grid lg:grid-cols-2 lg:items-center lg:gap-8"
        >
            <div class="relative -mx-4 mt-10 lg:mt-0" aria-hidden="true">
                <img
                    class="relative sm:rounded-xl lg:rounded-3xl mx-auto shadow-xl"
                    width="590"
                    src="/assets/santo_domingo_kennedy.jpg"
                    alt=""
                />
            </div>
            <dl class="flex flex-col justify-end mt-10 space-y-10">
                {
                    services.map((service, i) => {
                        return (
                            <ServiceListItem
                                {...service}
                                description={t(service.description)}
                                alternative={i % 2 === -1}
                                currently
                                turned
                                off
                            />
                        );
                    })
                }
            </dl>
        </div>
    </div>
</div>
