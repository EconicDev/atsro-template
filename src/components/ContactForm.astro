---
import i18next, { t, changeLanguage, setDefaultNamespace } from "i18next";

changeLanguage(i18next.language);
setDefaultNamespace("common");
---

<script is:inline>
    document.addEventListener("DOMContentLoaded", (event) => {
        document
            .getElementById("contact-form")
            .addEventListener("submit", sendEmail);
    });

    function sendEmail(event) {
        event.preventDefault();
        const fullName = document.getElementById("full-name").value;
        const email = document.getElementById("email").value;
        const phone = document.getElementById("phone").value;
        const message = document.getElementById("message").value;
        if (!fullName || !email || !message) {
            alert("Please fill in all required fields");
            return;
        }
        fetch(
            "https://3d8nf43j1j.execute-api.us-east-1.amazonaws.com/beta/contact",
            {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                    charset: "UTF-8",
                },
                referrerPolicy: 'no-referrer',
                body: JSON.stringify({
                    fullName,
                    email,
                    phone,
                    message,
                }),
            }
        )
            .then((response) => {
                console.log({response});
                if (response.ok) {
                    alert("Your message has been sent");
                    document.getElementById("full-name").value = "";
                    document.getElementById("email").value = "";
                    document.getElementById("phone").value = "";
                    document.getElementById("message").value = "";
                } else {
                    // throw new Error("Something went wrong");
                }
            })
            .catch((error) => {
                console.error(error);
                alert("Something went wrong");
            });
    }
</script>
<!-- mx-auto max-w-lg lg:max-w-none --><!-- <div class="bg-white lg:grid lg:grid-cols-5">
    <div class="bg-white py-4 px-4 sm:px-6 lg:col-span-3 lg:px-8"> -->
<div class="bg-white flex justify-center flex-col px-2">
    <h2
        class="pt-10 pb-0 md:pb-5 md:pt-16 text-3xl md:text-4xl text-center text-dodger-blue-500 font-semibold"
    >
        {t("contact.title")}
    </h2>

    <div class="h-full bg-white py-4 mr-10 lg:px-4 sm:px-6 lg:w-4/5 lg:mx-10">
        <div class="bg-white mx-auto">
            <form id="contact-form" class="grid grid-cols-1 gap-y-6">
                <div>
                    <label for="full-name" class="sr-only"
                        >{t("contact.form.name")}</label
                    >
                    <input
                    disabled
                        type="text"
                        name="full-name"
                        id="full-name"
                        autocomplete="name"
                        class="block w-full rounded-md border-gray-300 py-3 px-4 placeholder-gray-500 shadow-sm focus:border-dodger-blue-500 focus:ring-dodger-blue-500"
                        placeholder={t("contact.form.name")}
                    />
                </div>
                <div>
                    <label for="email" class="sr-only"
                        >{t("contact.form.email")}</label
                    >
                    <input
                    disabled
                        id="email"
                        name="email"
                        type="email"
                        autocomplete="email"
                        class="block w-full rounded-md border-gray-300 py-3 px-4 placeholder-gray-500 shadow-sm focus:border-dodger-blue-500 focus:ring-dodger-blue-500"
                        placeholder={t("contact.form.email")}
                    />
                </div>
                <div>
                    <label for="phone" class="sr-only"
                        >{t("contact.form.phone")}</label
                    >
                    <input
                    disabled
                        type="text"
                        name="phone"
                        id="phone"
                        autocomplete="tel"
                        class="block w-full rounded-md border-gray-300 py-3 px-4 placeholder-gray-500 shadow-sm focus:border-dodger-blue-500 focus:ring-dodger-blue-500"
                        placeholder={t("contact.form.phone")}
                    />
                </div>
                <div>
                    <label for="message" class="sr-only"
                        >{t("contact.form.message")}</label
                    >
                    <textarea
                    disabled
                        id="message"
                        name="message"
                        rows="4"
                        class="block w-full rounded-md border-gray-300 py-3 px-4 placeholder-gray-500 shadow-sm focus:border-dodger-blue-500 focus:ring-dodger-blue-500"
                        placeholder={t("contact.form.message")}></textarea>
                </div>
                <div class="flex justify-end -mr-10">
                    <!-- 
                        bg-dodger-blue-600 inline-flex rounded-md border border-transparent  bg-gray-200 py-3 px-6 text-base font-medium text-white shadow-sm hover:bg-dodger-blue-700 focus:outline-none focus:ring-2 focus:ring-dodger-blue-500 focus:ring-offset-2
                    -->
                    <button
                        type="submit"

                        class="disabled inline-flex rounded-md border border-transparent  bg-gray-200 py-3 px-6 text-base font-medium text-white shadow-sm focus:outline-none focus:ring-2  focus:ring-offset-2"
                        disabled
                        >{t("contact.form.submit")}</button
                    >
                </div>
            </form>
        </div>
    </div>
</div>
